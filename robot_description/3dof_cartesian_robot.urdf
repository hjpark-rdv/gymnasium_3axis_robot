<robot name="3dof_cartesian_robot">
  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
  </link>

  <!-- Z 축 이동 링크 -->
  <link name="link_z">
    <visual>
      <geometry>
        <box size="0.03 0.03 1.0"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Y 축 이동 링크 -->
  <link name="link_y">
    <visual>
      <geometry>
        <box size="0.03 1.0 0.03"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>

  <!-- X 축 이동 링크 -->
  <link name="link_x">
    <visual>
      <geometry>
        <box size="1.0 0.03 0.03"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- 조인트 설정 -->
  <joint name="joint_z" type="prismatic">
    <parent link="base_link"/>
    <child link="link_z"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="1" effort="500" velocity="0.5"/>
  </joint>

  <joint name="joint_y" type="prismatic">
    <parent link="link_z"/>  <!-- Z에 연결 -->
    <child link="link_y"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>  <!-- 부모 위치에서 시작 -->
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1" effort="100" velocity="0.5"/>
  </joint>

  <joint name="joint_x" type="prismatic">
    <parent link="link_y"/>  <!-- Y에 연결 -->
    <child link="link_x"/>
    <origin xyz="0 0.5 0" rpy="0 0 0"/>  <!-- 부모 위치에서 시작 -->
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="1" effort="100" velocity="0.5"/>
  </joint>
</robot>
