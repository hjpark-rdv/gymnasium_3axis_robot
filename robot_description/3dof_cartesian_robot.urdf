<robot name="3dof_cartesian_robot">
  <link name="base_link"/>
  <link name="link_x"/>
  <link name="link_y"/>
  <link name="link_z"/>

  <joint name="joint_x" type="prismatic">
    <parent link="base_link"/>
    <child link="link_x"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="1" effort="100" velocity="0.5"/>
  </joint>

  <joint name="joint_y" type="prismatic">
    <parent link="link_x"/>
    <child link="link_y"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1" effort="100" velocity="0.5"/>
  </joint>

  <joint name="joint_z" type="prismatic">
    <parent link="link_y"/>
    <child link="link_z"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="1" effort="100" velocity="0.5"/>
  </joint>
</robot>
